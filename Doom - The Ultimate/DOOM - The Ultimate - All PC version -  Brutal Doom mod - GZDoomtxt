custom-name: DOOM - The Ultimate - Brutal Doom mod - GZDoom
files:
- hdmod: N/A:Please select the Brutal Doom mod 2.1 RC1 available at https://www.moddb.com/mods/brutal-doom/downloads/brutal-doom-v21-rc1-fixed
game:
  files:
  - mods/bd21rc1fix.pk3
  main_file: doom.wad
  savedir: saves
installer:
- extract:
    dst: $CACHE
    src: hdmod1
- extract:
    dst: $CACHE
    src: hdmod2
- execute:
    command: mkdir "$GAMEDIR/mods"; find "$CACHE" \( -iname "*.pk3" -o -iname "*.wad"
      -o -iname "*.rtf" -o -iname "*.txt" \) -exec cp {} "$GAMEDIR/mods" \;
- insert-disc:
    description: Please browse folder where is located DOOM.WAD file. Autodetect will
      not work here, use "Browse" button.
    requires: doom.wad
- execute:
    command: ls "$DISC" | grep -i doom.wad | xargs -I {} cp "$DISC/{}" "$GAMEDIR/doom.wad";
      mkdir "$GAMEDIR/saves";
zdoom:
  config: $GAMEDIR/gzdoom.ini

